{
    "manifest_version": 3,
    "name": "Live USD to LKR Converter",
    "version": "1.4",
    "description": "Convert USD prices to LKR using real-time exchange rates. Includes a manual conversion tool.",
    "permissions": ["scripting", "activeTab", "storage"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "host_permissions": ["<all_urls>"]
  }
  